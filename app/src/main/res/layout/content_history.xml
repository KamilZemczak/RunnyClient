<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.activity_menu.HistoryActivity"
    tools:showIn="@layout/app_bar_history">

    <TextView
        android:id="@+id/historyActivity_tvInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="@string/trainingHistory"
        android:textSize="26sp" />

    <View
        android:id="@+id/historyActivity_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/historyActivity_tvInfo"
        android:layout_marginTop="4dp"
        android:background="@color/black" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/historyActivity_rvTrainings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/historyActivity_view"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/historyActivity_tvNoTrainingsFind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="280dp"
        android:gravity="center_horizontal"
        android:onClick="goToAddTraining"
        android:textSize="26sp" />

</RelativeLayout>
