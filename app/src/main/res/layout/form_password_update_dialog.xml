<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/formPasswordUpdate_tvEditInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:text="Edycja hasła." />

    <TextView
        android:id="@+id/formPasswordUpdate_tvPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/formPasswordUpdate_tvEditInfo"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:text="Nowe hasło" />

    <EditText
        android:id="@+id/formPasswordUpdate_etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/formPasswordUpdate_tvPassword"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:drawableLeft="@drawable/ic_lock"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/ic_edit"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/formPasswordUpdate_tvPasswordConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/formPasswordUpdate_etPassword"
        android:layout_marginLeft="15dp"
        android:text="Powtórz hasło" />

    <EditText
        android:id="@+id/formPasswordUpdate_etPasswordConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/formPasswordUpdate_tvPasswordConfirm"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:drawableLeft="@drawable/ic_lock"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/ic_edit"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/formPasswordUpdate_tvPasswordInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/formPasswordUpdate_etPasswordConfirm"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="Po zatwierdzenu hasło zostanie automatycznie zaktualizowane. Dalsze zapisywanie zmian nie jest konieczne." />

</LinearLayout>