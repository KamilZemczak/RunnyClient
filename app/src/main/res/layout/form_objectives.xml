<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/objectivesLayout_tvType"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:drawableLeft="@drawable/ic_subject"
        android:paddingBottom="2dip"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/objectivesLayout_tvObjective"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/objectivesLayout_tvType"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_fitness"
        android:paddingBottom="2dip"
        android:textColor="@color/colorAccent" />

    <ImageView
        android:id="@+id/objectivesLayout_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/objectivesLayout_tvObjective"
        android:layout_alignEnd="@+id/objectivesLayout_tvInfo"
        android:layout_alignRight="@+id/objectivesLayout_tvInfo"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:src="@drawable/check" />

    <TextView
        android:id="@+id/objectivesLayout_tvInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/objectivesLayout_image"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="8dp"
        android:text="@string/objectiveFail"
        android:textSize="10sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/objectivesLayout_tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/objectivesLayout_tvObjective"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_update"
        android:textColor="#5d5d5d"
        android:textStyle="bold" />

</RelativeLayout>